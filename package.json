{
  "name": "lygia",
  "version": "0.0.13",
  "description": "lygia, it's a granular and multi-language shader library designed for performance and flexibility",
  "main": "dist/umd/lygia.main.js",
  "unpkg": "dist/umd/lygia.main.js",
  "jsdelivr": "dist/umd/lygia.main.js",
  "module": "build/lygia.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist/* && webpack",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix --ext .js ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patriciogonzalezvivo/lygia.git"
  },
  "keywords": [
    "library",
    "metal",
    "computer-graphics",
    "glsl",
    "shader",
    "hlsl",
    "glsl-shader",
    "hlsl-shader",
    "metal-shader",
    "shader-library"
  ],
  "author": "Patricio Gonzalez Vivo",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/patriciogonzalezvivo/lygia/issues"
  },
  "homepage": "https://github.com/patriciogonzalezvivo/lygia#readme",
  "devDependencies": {
    "esbuild": "^0.13.7",
    "esbuild-plugin-glsl-include": "^0.0.5",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-glob": "^3.2.7",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "prettier": {
    "semi": false,
    "arrowParens": "always",
    "singleQuote": true
  }
}
